---
console.log("javascript Header");
import Buttton from "../components/HeaderButton.astro";
import BotonLlamar from "../components/actions/BotonLlamar.astro";
import BotonLlegar from "../components/actions/BotonLlegar.astro";
---

<nav
  class="bg-white dark:bg-gray-900 fixed w-full z-20 top-0 start-0 border-b border-gray-200 dark:border-gray-600"
>
  <div
    class="max-w-screen-xl flex flex-wrap sm:items-center sm:justify-between mx-auto p-4"
  >
    <a
      href="https://www.restaurantesantjhoane.com/"
      class="flex items-center space-x-3 rtl:space-x-reverse justify-center flex-1 sm:justify-start"
    >
      <img
        src="https://www.restaurantesantjhoane.com/favicon.ico"
        class="h-8"
        alt="Logo Restaurante Sant Jhoan'e"
      />
      <span
        class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white"
        >Restaurante Sant Jhoan'e</span
      >
    </a>

    <div class="hidden md:flex space-x-3 md:space-x-1">
      <BotonLlegar />

      <Buttton url="menu">
        <svg
          class="mr-1"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M7 4v17m-3 -17v3a3 3 0 1 0 6 0v-3"></path><path
            d="M17 8m-3 0a3 4 0 1 0 6 0a3 4 0 1 0 -6 0"></path><path
            d="M17 12v9"></path></svg
        >
        <span>Ver Carta</span>
      </Buttton>

      <BotonLlamar />
    </div>
  </div>
</nav>
